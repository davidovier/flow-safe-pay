{
  "name": "flowpay-monorepo",
  "version": "1.0.0-beta",
  "description": "FlowPay - Instant Creator Payment Platform",
  "private": true,
  "workspaces": ["backend", "app"],
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:app": "cd app && npm start",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:app\"",
    "build:backend": "cd backend && npm run build",
    "build:app": "cd app && npm run build:all",
    "test:backend": "cd backend && npm test",
    "test:app": "cd app && npm test",
    "test:all": "npm run test:backend && npm run test:app",
    "lint:backend": "cd backend && npm run lint",
    "lint:app": "cd app && npm run lint",
    "lint:all": "npm run lint:backend && npm run lint:app",
    "typecheck:backend": "cd backend && npm run typecheck",
    "typecheck:all": "npm run typecheck:backend",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:reset": "cd backend && npm run db:reset",
    "setup": "npm install && cd backend && npm install && cd ../app && npm install",
    "postinstall": "echo 'âœ… FlowPay monorepo installed successfully!'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "escrow",
    "payments", 
    "creators",
    "brands",
    "stripe",
    "react-native",
    "fastify",
    "prisma"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flowpay/flowpay-platform.git"
  },
  "bugs": {
    "url": "https://github.com/flowpay/flowpay-platform/issues"
  },
  "homepage": "https://flowpay.app",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}