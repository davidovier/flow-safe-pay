# FlowPay Mobile App Environment Configuration

# API Configuration
EXPO_PUBLIC_API_URL=https://api.flowpay.app
EXPO_PUBLIC_WS_URL=wss://api.flowpay.app

# Development overrides (uncomment for local development)
# EXPO_PUBLIC_API_URL=http://localhost:3001
# EXPO_PUBLIC_WS_URL=ws://localhost:3001

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Deep Linking
EXPO_PUBLIC_APP_SCHEME=flowpay
EXPO_PUBLIC_DOMAIN=flowpay.app

# Development Settings (only used in development builds)
EXPO_PUBLIC_DEBUG_API_CALLS=false
EXPO_PUBLIC_MOCK_API_RESPONSES=false